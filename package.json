{
  "name": "react-next-js-smart-snippets",
  "displayName": "React Next.js Smart Snippets",
  "description": "Intelligent React, Next.js, Typescript and JavaScript snippets with workspace and context awareness",
  "version": "1.0.1",
  "publisher": "morse-code",
  "engines": {
    "vscode": "^1.103.0"
  },
  "author": {
    "name": "Victor Okenwa",
    "email": "okenwavictor003@gmail.com"
  },
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#1E90FF",
    "theme": "dark"
  },
  "license": "MIT",
  "keywords": [
    "vscode",
    "snippets",
    "react",
    "nextjs",
    "typescript",
    "javascript",
    "smart snippets",
    "intelligent snippets",
    "react snippets",
    "next.js snippets",
    "typescript snippets",
    "javascript snippets",
    "react next.js snippets",
    "react nextjs snippets",
    "react nextjs smart snippets",
    "react nextjs intelligent snippets",
    "react nextjs code snippets",
    "react nextjs code completion",
    "react nextjs code generation",
    "react nextjs code assistance",
    "react nextjs code helper",
    "react nextjs code tools",
    "react nextjs code productivity",
    "react nextjs code efficiency",
    "react nextjs code quality",
    "react nextjs code standards",
    "react nextjs code best practices",
    "react nextjs code optimization",
    "react nextjs code refactoring",
    "react nextjs code organization",
    "react nextjs code structure",
    "react nextjs code readability",
    "react nextjs code maintainability"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Victor-Okenwa/react-next-js-snippets"
  },
  "categories": [
    "Snippets",
    "Programming Languages",
    "JavaScript",
    "TypeScript",
    "React",
    "Next.js",
    "Web Development",
    "Development Tools",
    "Productivity",
    "Code Completion",
    "Code Generation",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "react-next-js-smart-snippets.snippets",
        "title": "React Next Smart Snippets",
        "category": "Smart Snippets"
      },
      {
        "command": "react-next-js-smart-snippets.organizeAndFormatImports",
        "title": "React Next Smart Snippets",
        "category": "Smart Snippets"
      }
    ],
    "keybindings": [
      {
        "command": "react-next-js-smart-snippets.snippets",
        "key": "ctrl+shift+l",
        "when": "editorTextFocus",
        "mac": "cmd+shift+l"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
